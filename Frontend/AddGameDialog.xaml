<Window x:Class="Frontend.AddGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend"
        mc:Ignorable="d"
        Title="AddGameDialog" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock  x:Name="savePathUI"
                    Grid.Row="1" TextWrapping="Wrap" Text="SavePath"  HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" />
        <TextBox  x:Name="gameNameUI"
            Grid.Row="0" TextWrapping="Wrap" Text="Game"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" />
        <Button x:Name="btnSelect"
        Content="SelectPath" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnSelect_Click"/>
        <Button x:Name="btnOk"
        Content="Ok" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnOk_Click" Margin="300,0,0,0"/>
    </Grid>
</Window>
